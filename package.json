{
    "name": "svelte-asyncable",
    "version": "2.2.0",
    "description": "Super tiny, declarative, optimistic, async store for SvelteJS.",
    "main": "./dist/index.js",
    "module": "./dist/index.mjs",
    "cdn": "dist/asyncable.min.js",
    "unpkg": "dist/asyncable.min.js",
    "svelte": "./src/index.js",
    "types": "./src/index.d.ts",
    "engines": {
        "node": ">=10.0.0"
    },
    "scripts": {
        "build": "npm run format && npm run lint && npm run clean && rollup -c",
        "prepublishOnly": "npm run build && npm run size",
        "format": "prettier --write src",
        "lint": "eslint src",
        "lint:fix": "eslint src --fix",
        "test": "jest src",
        "size": "size-limit",
        "clean": "rm -rf ./dist"
    },
    "babel": {
        "presets": [
            [
                "@babel/preset-env"
            ]
        ]
    },
    "browserslist": [
        "extends browserslist-config-google"
    ],
    "size-limit": [
        {
            "name": "UMD output",
            "limit": "1 KB",
            "path": "./dist/index.js"
        },
        {
            "name": "ESM output",
            "limit": "1 KB",
            "path": "./dist/index.mjs"
        },
        {
            "name": "UMD output (minified)",
            "limit": "1 KB",
            "path": "./dist/index.min.js"
        },
        {
            "name": "ESM output (minified)",
            "limit": "1 KB",
            "path": "./dist/index.min.mjs"
        },
        {
            "name": "IIFE bundle",
            "limit": "3.5 KB",
            "path": "./dist/asyncable.js"
        },
        {
            "name": "ESM bundle",
            "limit": "1.6 KB",
            "path": "./dist/asyncable.mjs"
        },
        {
            "name": "IIFE bundle (minified)",
            "limit": "2 KB",
            "path": "./dist/asyncable.min.js"
        },
        {
            "name": "ESM bundle (minified)",
            "limit": "2 KB",
            "path": "./dist/asyncable.min.mjs"
        }
    ],
    "prettier": {
        "tabWidth": 4,
        "semi": true,
        "singleQuote": true
    },
    "eslintConfig": {
        "extends": [
            "eslint:recommended",
            "prettier"
        ],
        "parserOptions": {
            "ecmaVersion": 2019,
            "sourceType": "module"
        },
        "env": {
            "es6": true,
            "browser": true
        }
    },
    "files": [
        "src",
        "dist"
    ],
    "repository": {
        "type": "git",
        "url": "git+https://github.com/sveltetools/svelte-asyncable.git"
    },
    "keywords": [
        "svelte",
        "svelte store"
    ],
    "author": "PaulMaly",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/sveltetools/svelte-asyncable/issues"
    },
    "homepage": "https://github.com/sveltetools/svelte-asyncable#readme",
    "devDependencies": {
        "@babel/core": "^7.13.8",
        "@babel/preset-env": "^7.13.8",
        "@rollup/plugin-babel": "^5.3.0",
        "@rollup/plugin-commonjs": "^17.1.0",
        "@rollup/plugin-node-resolve": "^11.2.0",
        "@size-limit/preset-app": "^4.9.2",
        "browserslist-config-google": "^2.0.0",
        "core-js": "^3.9.0",
        "eslint": "^7.20.0",
        "eslint-config-prettier": "^8.1.0",
        "jest": "^26.6.3",
        "prettier": "^2.2.1",
        "rollup": "^2.40.0",
        "rollup-plugin-sourcemaps": "^0.6.3",
        "rollup-plugin-terser": "^7.0.2",
        "size-limit": "^4.9.2",
        "svelte": "^4.2.19"
    },
    "peerDependencies": {
        "svelte": "4.x"
    }
}
